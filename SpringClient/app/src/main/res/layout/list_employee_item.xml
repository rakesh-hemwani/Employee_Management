<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingBottom="20dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:text="Employee Name"
        android:id="@+id/employeeList_Name"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="20dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/colorText"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Location"
        android:id="@+id/employeeList_Location"
        android:textColor="@color/secondaryColorText"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/employeeList_Name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:textSize="16dp"

        android:layout_height="wrap_content"/>
    <TextView
        android:text="Branch"
        android:id="@+id/employeeList_branch"
        android:layout_width="wrap_content"
        android:textColor="@color/secondaryColorText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"
        android:textSize="16dp"
        android:layout_height="wrap_content"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#AFADAD"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/employeeList_Location"/>

</androidx.constraintlayout.widget.ConstraintLayout>